{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "rootDir": "./src",
    "outDir": "./dist/cjs",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "lib": ["ESNext"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": [ "**/node_modules/**", "**/dist/**", "**/**.spec.ts", "**/bin/**"]
}
